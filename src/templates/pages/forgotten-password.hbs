<div class="row">
  <form class="col-md-4 col-md-offset-4 clearfix" id="forgotten-password">
    <div class="form-group clearfix{{#if validationErrors.email}} has-error{{/if}}">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" placeholder="Email" value="{{email}}">
      {{#if validationErrors.email}}
        <label class="control-label pull-right small" for="email">{{validationErrors.email}}</label>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-success pull-right">Forgotten Password</button>
  </form>
</div>
